{{#> app}}
  {{#*inline "content"}} 
<div class="f">
  <br>
  <br>
		<h1 class="text-center"></style><span class="bdots">&bullet;&#160;</span>C A R &#160;&#160;<span class="carstxt">D E T A I L S</span>&#160;&bullet;</h1>
  <br>
  <br>
  <div class="container">
    {{#with data.prod}}
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4 car">
          <img src="/image/{{image}}" class="img-fluid">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            {{!-- <h3 style="margin-left:250px;margin-top:40px;font-style:oblique;" class="card-title"> --}}
               <h3 style="text-align:center;margin-top:20px;font-style:oblique;" class="card-title">
              {{name}}
            </h3>
           {{!-- <h4 style="margin-left:300px;margin-top:10px;">&#8377;&#160; {{price}} </h4> --}}
               <h4 style="text-align:center;margin-top:10px;">&#8377;&#160; {{price}} </h4>
            <p class="card-text">{{description}}</p>

                

                <p class="card-text">
              <form method="POST" action="/cart/add/{{id}}">
                <div class="row">
                  <div class="col-auto" style="margin-left: 300px;">
                    <div class="input-group col-auto">
                      <div class="input-group-text">Quantity</div>
                      <input type="number" min="1" max="10" class="form-control quantity-input" name="quantity" value="1">
                    </div>
                  </div>
                  <div class="col-auto" style="margin-left: 300px;">
                    <button class="btn bg-primary text-white" type="submit">Add to cart</button>
                  </div>
                </div>
              </form>
            </p>


          </div>
        </div>
      </div>
    </div>

  
    {{/with}}
  </div>
</div>
 {{/inline}}
{{/app}}
